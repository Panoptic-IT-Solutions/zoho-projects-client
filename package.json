{
  "name": "@panoptic-it-solutions/zoho-projects-client",
  "version": "0.2.3",
  "description": "TypeScript client for Zoho Projects V3 API with OAuth 2.0 and rate limiting",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "zoho-projects": "./dist/cli/init.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "zoho",
    "zoho-projects",
    "api-client",
    "typescript"
  ],
  "author": "Panoptic IT Solutions",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Panoptic-IT-Solutions/zoho-projects-client.git"
  },
  "bugs": {
    "url": "https://github.com/Panoptic-IT-Solutions/zoho-projects-client/issues"
  },
  "homepage": "https://github.com/Panoptic-IT-Solutions/zoho-projects-client#readme",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "bottleneck": "^2.19.5",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "msw": "^2.7.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
